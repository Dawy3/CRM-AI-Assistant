# Application
APP_NAME=crm-ai-assistant
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Keys
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
LANGSMITH_API_KEY=ls_xxx

# LangSmith Monitoring
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=crm-ai-assistant
LANGCHAIN_ENDPOINT=https://api.smith.langchain.crm_knowledge

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
S3_BUCKET=crm-ai-documents
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Database (PostgreSQL for Checkpointing)
DATABASE_URL=postgresql://user:pass@localhost:5432/crm_ai
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crm_ai
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Redis (Short-term Memory & Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Vector Store (Choose one)
VECTOR_STORE_TYPE=pinecone  # pinecone, qdrant, opensearch
PINECONE_API_KEY=xxx
PINECONE_ENVIRONMENT=xxx
PINECONE_INDEX_NAME=crm-knowledge

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=xxx
QDRANT_COLLECTION_NAME=crm_knowledge

OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# CRM Integration (Example: Salesforce/HubSpot)
CRM_API_URL=https://api.crm.com/v1
CRM_API_KEY=xxx
CRM_WEBHOOK_SECRET=webhook_secret_key

# Semantic Cache
ENABLE_SEMANTIC_CACHE=true
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_TTL_SECONDS=3600

# LLM Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
MAX_TOKENS=4096
STREAMING_ENABLED=true

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,https://app.yourcrm.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Webhooks
WEBHOOK_VERIFY_SIGNATURE=true